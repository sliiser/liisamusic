<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :name_key %><br>
      <%= f.text_field :name_key, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :button_order %><br>
      <%= f.number_field :button_order, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :visible %><br>
      <%= f.check_box :visible, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
  $(document).ready(function(){
    $('#page_body').wysiwyg_editable({
      inlineMode: false,
      height: 300
    })
  })
</script>